<%- partial('_partial/head') %>

<body>
  <header id="header"><%- partial('_partial/header') %></header>
  <script type="text/javascript">
    $(function() {
      $(window).scroll(function() {
        var header = $('.header-align');
        var top = $(window).scrollTop();
        if (top > 0) {
          header.addClass('fixed-position');
        } else {
          header.removeClass('fixed-position');
        }
      });
    });
  </script>
  <div id="content" class="inner">
    <div id="main-col" class="alignleft"><div id="wrapper"><%- body %></div></div>
    <aside id="sidebar" class="alignright"><%- partial('_partial/sidebar', {item: page}) %></aside>
    <div class="clearfix"></div>
  </div>
  <footer id="footer" class="inner"><%- partial('_partial/footer') %></footer>
  <%- partial('_partial/after_footer') %>
</body>
</html>
